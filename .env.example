# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Application Configuration
VITE_NAME=Fastrack Driving School LMS
VITE_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Stripe Configuration (Frontend - Publishable Key Only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# Sentry Configuration (Error Tracking & Performance Monitoring)
# Get your DSN from https://sentry.io/settings/projects/fastrack-lms/keys/
VITE_SENTRY_DSN=https://your_key@your_sentry_project_id.ingest.sentry.io/your_project_number

# Sentry Configuration for Cloud Functions (set as Firebase secret)
SENTRY_DSN=https://your_key@your_sentry_project_id.ingest.sentry.io/your_project_number

# CORS Configuration (comma-separated, no spaces)
VITE_CORS_ORIGINS=http://localhost:3000,https://fastrackdrive.com,https://www.fastrackdrive.com,https://fastrack-driving-school-lms.web.app,https://fastrack-driving-school-lms.firebaseapp.com

# CSRF Configuration
VITE_CSRF_TOKEN_NAME=X-CSRF-Token
VITE_CSRF_COOKIE_NAME=csrf_token
