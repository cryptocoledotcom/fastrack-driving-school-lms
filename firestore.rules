rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Data Rules ---
    // Users can read and write to their own user document and all sub-collections
    // (like 'courses' for enrollments and 'userProgress').
    // They cannot access data belonging to other users.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Public Content Rules ---
    // Any authenticated user can read course, module, and lesson content.
    // Only admins or instructors can create, update, or delete them.
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /modules/{moduleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // --- Admin-Only Rules ---
    // Example for a collection only admins can access.
    match /admin-data/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Certificates collection - users can only access their own certificates
    match /certificates/{certificateId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null;
    }

    // Time Slots collection - admins/instructors manage, all authenticated users can read
    match /timeSlots/{slotId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Bookings collection - users can read/write their own bookings
    match /bookings/{bookingId} {
      allow read: if request.auth != null && resource.data.studentId == request.auth.uid;
      allow write: if request.auth != null;
    }

    // Audit Logs collection - all authenticated users can read/write for now
    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    // Payments collection - users can access their own payments
    match /payments/{paymentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null;
    }

    // Enrollments collection - users can access their own enrollments
    match /enrollments/{enrollmentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null;
    }

    // --- Compliance Data Protection (Immutable Audit Trail) ---
    // Compliance logs: write-once, never delete or modify
    match /complianceLogs/{logId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Quiz attempts: write-once, never delete or modify
    match /quizAttempts/{attemptId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Identity verifications (PVQ): write-once, never delete or modify
    match /identityVerifications/{verificationId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Certificates: enhanced protection - created by Cloud Function, immutable after issuance
    match /certificates/{certificateId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }

    // --- Compliance Session Records ---
    // Compliance sessions: write-once, tracks session lifecycle
    match /complianceSessions/{sessionId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }

    // Catch-all rule for any other collections (read-only by default)
    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
}

// --- Helper Functions ---
function isAdmin() {
  return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
}

function isInstructor() {
  return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'instructor';
}