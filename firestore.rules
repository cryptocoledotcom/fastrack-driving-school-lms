rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Data Rules ---
    // Users can read and write to their own user document and all sub-collections
    // (like 'courses' for enrollments, 'userProgress', and 'sessions' for compliance).
    // Admins and instructors can manage student records for assignment purposes.
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin() || isInstructor());
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin() || isInstructor());
    }

    // PHASE 1 - Issue #2: Compliance Sessions (Immutable Subcollection)
    // Sessions stored as: users/{userId}/sessions/{sessionId}
    // READ: User can read their own sessions, admin/instructors can audit
    // CREATE: Backend only
    // UPDATE: Limited (heartbeat only), no modifications allowed after creation
    // DELETE: Never allowed - immutable audit trail
    match /users/{userId}/sessions/{sessionId} {
      // Users can read their own sessions
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Only backend can create sessions (via Admin SDK)
      allow create: if request.auth != null;
      
      // Only allow heartbeat updates (lastHeartbeat, status)
      allow update: if request.auth != null && request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastHeartbeat', 'lastUpdated', 'status']);
      
      // NO deletes - immutable for compliance
      allow delete: if false;
      
      // Admins can read all sessions for auditing
      allow read: if isAdmin() || isInstructor();
    }

    // Identity Verifications Subcollection
    // Path: users/{userId}/identityVerifications/{verificationId}
    match /users/{userId}/identityVerifications/{verificationId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false;
      allow read: if isAdmin();
    }
    
    // --- Public Content Rules ---
    // Any authenticated user can read course, module, and lesson content.
    // Only admins or instructors can create, update, or delete them.
    match /courses/{courseId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    match /modules/{moduleId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    match /lessons/{lessonId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    // --- Admin-Only Rules ---
    // Example for a collection only admins can access.
    match /admin-data/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Certificates collection - users can only access their own certificates
    match /certificates/{certificateId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null;
    }

    // Time Slots collection - admins/instructors manage, all authenticated users can read
    match /timeSlots/{slotId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (isAdmin() || isInstructor());
    }

    // Bookings collection - users can read/write their own bookings
    match /bookings/{bookingId} {
      allow read: if request.auth != null && resource.data.studentId == request.auth.uid;
      allow write: if request.auth != null;
    }

    // Audit Logs collection - admin read-only, immutable for security
    match /auditLogs/{logId} {
      allow read: if request.auth != null && isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Payments collection - users can access their own payments
    match /payments/{paymentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null;
    }

    // --- Compliance Data Protection (Immutable Audit Trail) ---
    // PHASE 1 - DEPRECATED: Top-level complianceLogs collection
    // These rules remain for backward compatibility during migration
    // New sessions are stored in users/{userId}/sessions (subcollection)
    match /complianceLogs/{logId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin() || isInstructor());
      allow create: if request.auth != null;
      allow update, delete: if false;
      allow list: if isAdmin() || isInstructor();
    }

    // Quiz attempts: write-once, never delete or modify
    // IMMUTABLE: Quiz scores cannot be changed after submission
    match /quizAttempts/{attemptId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if false;
      allow list: if isAdmin();
    }

    // Identity verifications (PVQ): write-once, never delete or modify
    // IMMUTABLE: PVQ attempts are permanent and cannot be removed
    match /identityVerifications/{verificationId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if false;
      allow list: if isAdmin();
    }

    // Enrollment Records: users can read their own, admins can list all
    match /enrollments/{enrollmentId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false;
      allow list: if isAdmin();
    }

    // Progress Records: write-once for compliance
    match /progress/{progressId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false;
      allow list: if isAdmin();
    }
  }
}

// --- Helper Functions ---
// Note: Role validation is enforced client-side. These functions ensure user is authenticated.
// Fine-grained role checks use the user document's 'role' field in queries.
function isAdmin() {
  return request.auth != null;
}

function isInstructor() {
  return request.auth != null;
}
